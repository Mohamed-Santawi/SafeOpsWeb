@code{
    #region Fields

    AuthenticationState authenticationState;

    #endregion


    #region Events

    protected override async Task OnInitializedAsync()
    {
        Task.Run(async () =>
        {
            try
            {
                ApiAuthenticationStateProvider apiAuthenticationStateProvider = (ApiAuthenticationStateProvider)authenticationStateProvider;
                authenticationState = await apiAuthenticationStateProvider.GetAuthenticationStateAsync();
            }
            catch (AuthRequestException exception)
            {
                //show maui message
                await Application.Current.MainPage.DisplayAlert("!!!", Localizer["NoConnectionWithServer"], Localizer["Cancel"]);
            };

            await InvokeAsync(StateHasChanged);
        });
    }

    #endregion


    #region Methods
    private async void GoBack()
    {
        await jsRuntime.InvokeVoidAsync("GoPrevious");
    }

    private void NavToLogout()
    {
        navigationManager.NavigateTo("/logout");
    }

    #endregion
}
