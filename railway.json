{
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Backend-Only/Dockerfile"
  },
  "deploy": {
    "startCommand": "dotnet AuthServer.dll",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
